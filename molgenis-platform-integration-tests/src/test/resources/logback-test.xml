<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="jobExecutionLogAppender" class="org.molgenis.data.jobs.JobExecutionLogAppender"/>
    <logger name="org.molgenis" level="INFO"/>
    <logger name="org.molgenis.data.elasticsearch" level="DEBUG"/>
    <logger name="org.molgenis.data.postgresql" level="DEBUG"/>
    <logger name="org.molgenis.data.elasticsearch.util.BulkProcessorFactory" level="TRACE"/>
    <!--<logger name="org.molgenis.data.elasticsearch.reindex.job" level="TRACE"/>-->

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="org.molgenis.data.jobs.JobExecution" level="ALL">
        <appender-ref ref="jobExecutionLogAppender"/>
    </logger>
</configuration>